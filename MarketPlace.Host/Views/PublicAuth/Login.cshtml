@using Infa.Domain.ViewModels.Captcha
@model Infa.Domain.ViewModels.PublicAuth.LoginUserVM
@{
    TempData["title"] = "ورود";
}

@{
    Layout = "_DefaultLayout";
}

@if (ViewBag.IsSuccess == true)
{


    <script>
        var delay = 5000;
        setTimeout(function () { window.location = "http://localhost:5235" }, delay)

    </script>

}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">خانه</a></li>
        <li class="breadcrumb-item"><a>ورود</a></li>
    </ol>
</nav>

<div class="customer_login mt-60">
    <div class="container">
        <div class="row">
            <!--register area start-->
            <div class="col-lg-6 col-md-6 offset-lg-3 offset-md-3">
                <div class="account_form register">
                    <form asp-action="Login" method="post">
                        <partial name="_CaptchaInput"/>
                        <p>
                            <label>ایمیل<span>*</span></label>
                            <input type="text" asp-for=Email>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </p>
                        <p>
                            <label>رمز عبور <span>*</span></label>
                            <input type="password" asp-for=Password>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </p>

                        <p>
                            <label>مرا به خاطر بسپار</label>
                            <input asp-for=RememberMe type="checkbox" />
                            <span asp-validation-for="RememberMe" class="text-danger"></span>
                        </p>

                        <p>
                            <a href="/ForgotPassword"> رمز عبور خود را فراموش کردید ؟</a>
                        </p>

                        <div class="login_submit">
                            <button type="submit">ورود</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!--register area end-->