
@model Infa.Domain.ViewModels.PublicAuth.RegisterUserVM
@{
    TempData["title"] = "ثبت نام";
}

@{
    Layout = "_DefaultLayout";
}

@if (ViewBag.IsSuccess == true)
{


    <script>
        var delay = 5000;
        setTimeout(function () { window.location = "http://localhost:5235" }, delay)

    </script>

}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">خانه</a></li>
        <li class="breadcrumb-item"><a>ثبت نام</a></li>
    </ol>
</nav>

<div class="customer_login mt-60">
    <div class="container">
        <div class="row">
            <!--register area start-->
            <div class="col-lg-6 col-md-6 offset-lg-3 offset-md-3">
                <div class="account_form register">
                    <form asp-action="Register" method="post">
                        <partial name="_CaptchaInput"/>
                        <input type="hidden" asp-for=Token />
                        <p>
                            <label>آدرس ایمیل <span>*</span></label>
                            <input type="text" asp-for=Email>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </p>



                        <p>
                            <label>نام <span>*</span></label>
                            <input type="text" asp-for=FirstName>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </p>
                        <p>
                            <label>نام خانوادگی <span>*</span></label>
                            <input type="text" asp-for=LastName>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </p>
                    

                        <p>
                            <label>رمز عبور <span>*</span></label>
                            <input type="password" asp-for=Password>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </p>
                        <p>
                            <label>تکرار رمز عبور <span>*</span></label>
                            <input type="password" asp-for=ConfirmPassword>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </p>
                        <div class="login_submit">
                            <button type="submit">ثبت نام</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!--register area end-->