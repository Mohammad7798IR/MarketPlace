@model Infa.Domain.ViewModels.Store.SellerFilterVM
@using Infa.Domain.Models.Store
@using Infa.Domain.ViewModels.Common
@using Infa.Domain.ViewModels.Store
@{
    ViewData["Title"] = "درخواست های فروشندگی";
}

<div class="col-xs-4">
    <div class="well with-header">
        <div class="header bordered-sky">
            فیلتر
        </div>
        <form asp-area="Admin" asp-controller="Seller" asp-action="SellerRequests" method="get" id="filter-form">
            <div class="form-group">
                <label>نام فروشگاه</label>
                <input class="form-control" asp-for=StoreName>
            </div>
            <div class="form-group">
                <label>تلفن تماس</label>
                <input class="form-control" asp-for=PhoneNumber>
            </div>
            <div class="form-group">
                <label>تلفن همراه</label>
                <input class="form-control" asp-for=MobileNumber>
            </div>
            <div class="form-group">
                <label>آدرس فروشگاه</label>
                <input class="form-control" asp-for=Address>
            </div>
            <hr />
            <h4>وضعیت</h4>
            <div class="control-group row col-xs-12">
                @*<div class="radio">
                    <label>
                    <input type="radio" class="colored-blue" value="@FilterSellerState.All" name="@nameof(Model.State)" @(Model.State == FilterSellerState.All ? "checked":"")>
                    <span class="text">همه</span>
                    </label>
                    </div>
                    <div class="radio">
                    <label>
                    <input type="radio" class="colored-blue" value="@FilterSellerState.Accepted" name="@nameof(Model.State)" @(Model.State == FilterSellerState.Accepted ? "checked":"")>
                    <span class="text">تایید شده</span>
                    </label>
                    </div>*@
                <div class="control-group row col-xs-6">
                    @foreach (var item in Html.GetEnumSelectList<StoreAcceptanceState>())
                    {
                        <div class="radio">
                            <label>
                                <input type="radio" class="colored-blue" value="@item.Value" name="@nameof(Model.StoreAcceptanceState)" @(Convert.ToInt32(item.Value) == Convert.ToInt32(Model.StoreAcceptanceState) ? "checked":"")>
                                <span class="text">@item.Text</span>
                            </label>
                        </div>
                    }
                </div>

                <h4> ترتیب  </h4>
                <div class="control-group row col-xs-6">
                    @foreach (var item in Html.GetEnumSelectList<OrderBy>())
                    {
                        <div class="radio">
                            <label>
                                <input type="radio" class="colored-blue" value="@item.Value" name="@nameof(Model.OrderBy)" @(Convert.ToInt32(item.Value) == Convert.ToInt32(Model.OrderBy) ? "checked":"")>
                                <span class="text">@item.Text</span>
                            </label>
                        </div>
                    }
                </div>
            </div>
            <button type="submit" class="btn btn-success btn-block">فیلتر</button>
        </form>
    </div>
</div>


<div class="col-xs-8">
    <div class="well with-header with-footer">
        <div class="header bordered-sky">
            @ViewData["Title"]
        </div>
        @if (Model.sellers != null && Model.sellers.Any())
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            شناسه
                        </th>
                        <th>
                            نام فروشگاه
                        </th>
                        <th>
                            تلفن
                        </th>
                        <th>
                            تلفن همراه
                        </th>
                        <th>
                            وضعیت
                        </th>
                        <th>
                            دستورات
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var seller in Model.sellers)
                    {
                        <tr id="ajax-url-item-@seller.Id">
                            <td>
                                @seller.Code
                            </td>
                            <td>
                                @seller.StoreName
                            </td>
                            <td>
                                @seller.PhoneNumber
                            </td>
                            <td>
                                @seller.MobileNumber
                            </td>
                            <td>
                                @Html.DisplayFor(Model=>seller.StoreAcceptanceState)
                            </td>
                            <td>
                                @if (seller.StoreAcceptanceState != StoreAcceptanceState.Accepted)
                                {
                                    <a type="button" ajax-url-button="@seller.Id" class="btn success" asp-area="Admin" asp-controller="Seller" asp-action="AcceptSellerRequest" asp-route-sellerId="@seller.Id">تایید اطلاعات</a>
                                }

                                @if (seller.StoreAcceptanceState != StoreAcceptanceState.Rejected)
                                {
                                    <a class="btn btn-danger" data-toggle="modal" data-target=".reject-modal-@seller.Id">ردکردن اطلاعات</a>
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                <p>
                    هیچ اطلاعاتی یافت نشد
                </p>
            </div>
        }

    </div>
</div>


@if (Model.sellers != null && Model.sellers.Any())
{
    foreach (var seller in Model.sellers)
    {
        <div class="modal fade reject-modal-@seller.Id" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title" id="myLargeModalLabel">رد کردن اطلاعات</h4>
                    </div>
                    <div class="modal-body">
                        <form asp-area="Admin" asp-controller="Seller" asp-action="RejectSellerRequest">

                            <partial name="_RejectItemPartial" model="@(new RejectItemVM {Code = seller.Code})" />
                            <hr />
                            <button class="btn btn-danger" type="submit">رد کردن اطلاعات</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
}
