@using Infa.Application.Utils
@using Infa.Domain.ViewModels.Contact
@model Infa.Domain.ViewModels.Contact.TicketDetailsVM
@{
    ViewData["Title"] = Model.Ticket.Title;
}



<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    @await Component.InvokeAsync("SideBar")
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade active show" id="account-details">
                            <h3>@ViewData["Title"] </h3>


                            <hr />
                            <ul class="messages" id="messages">
                                @if (Model.TicketMessage != null && Model.TicketMessage.Any())
                                {
                                    foreach (var message in Model.TicketMessage)
                                    {
                                        <li class="message @(message.SenderId == Model.Ticket.OwnerId ? "right" : "left") appeared">
                                            <div class="avatar">
                                                <img  src="@(!string.IsNullOrEmpty(Model.User.Avatar) ? FilePath.UserAvatarOrigin + Model.User.Avatar : FilePath.DefaultAvatar)" />
                                            </div>
                                            <div class="text_wrapper">
                                                <div class="time">
                                                    @message.CreateAt ساعت 
                                                </div>
                                                <div class="text" style="font-size: 16px">
                                                    @Html.Raw(message.Text)
                                                </div>
                                            </div>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




