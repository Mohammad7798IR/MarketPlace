@model Infa.Domain.ViewModels.Contact.FilterTicketVM
@using Infa.Domain.Models.Contacts

<aside class="sidebar_widget">
    <div class="widget_inner">
        <div class="widget_list widget_categories">
            <h2>مرتب سازی بر اساس : </h2>
            <form asp-area="User" asp-controller="Ticket" asp-action="Index">
                <ul>
                    <li>
                        <div class="form-group row col-md-12 ">
                            <div class="form-group col-md-6">
                                <label>بخش مورد نظر</label>
                                <select asp-for="TicketSection" asp-items="@Html.GetEnumSelectList<TicketSection>()" class="form-control"></select>
                            </div>
                            <div class="form-group col-md-6">
                                <label>اولویت </label>
                                <select asp-for=TicketPriority asp-items="@Html.GetEnumSelectList<TicketPriority>()" class="form-control"></select>
                            </div>
                            <div class="save_button primary_btn default_button">
                                <button type="submit">اعمال</button>
                            </div>
                        </div>
                    </li>
                </ul>
            </form>
        </div>
    </div>
</aside>
<!--sidebar widget end-->