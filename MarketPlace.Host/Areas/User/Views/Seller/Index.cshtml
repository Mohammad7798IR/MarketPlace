@model Infa.Domain.ViewModels.Store.SellerFilterVM
@{
    ViewData["title"] = "تیکت ها";
}

<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-2 col-md-2 col-lg-2">
                    <!-- Nav tabs -->
                    <div class="dashboard_tab_button">
                        @await Component.InvokeAsync("SideBar")
                    </div>
                </div>
                <div class="col-sm-10 col-md-10 col-lg-10">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade" id="dashboard">
                            <h3>داشبورد </h3>
                            <p>لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با <a href="#">سفارشات اخیر</a>لورم ایپسوم متن <a href="#">لورم ایپسوم متن ساختگی با تولید</a> لورم <a href="#">لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم</a></p>
                        </div>
                        <div class="tab-pane fade active show" id="downloads">
                            <div class="table-responsive">
                                @if (Model.sellers != null && Model.sellers.Any())
                                {
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>شماره درخواست</th>
                                                <th>نام فروشگاه</th>
                                                <th>تاریخ</th>
                                                <th>وضعیت</th>
                                                <th>جزییات</th>
                                                <th>ویرایش</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var item in Model.sellers)
                                            {
                                                <tr>
                                                    <td>@item.Code)</td>
                                                    <td>@item.StoreName</td>
                                                    <td>@item.CreateAt</td>
                                                    <td>@Html.DisplayFor(Model=>item.StoreAcceptanceState)</td>
                                                    <td><a class="view">نمایش جزییات</a></td>
                                                    @if (item.StoreAcceptanceState == Infa.Domain.Models.Store.StoreAcceptanceState.Accepted || item.StoreAcceptanceState == Infa.Domain.Models.Store.StoreAcceptanceState.Rejected)
                                                    {
                                                        <td><a href="http://localhost:5076/EditRequestSellerPanel/@item.Id" class="view">ویرایش</a></td>
                                                    }

                                                    else
                                                    {
                                                          <td>ویرایش</td>
                                                    }
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }

                                else
                                {
                                    <partial name="_NoItemFound" />
                                }
                            </div>
                        </div>
                        <div class="dashboard_tab_button row">
                            <ul role="button" class="nav flex-column dashboard-list row col-md-12">
                                <li class="col-md-3"><a asp-area="User" asp-controller="Seller" asp-action="RequestSellerPanel" class="nav-link">ثبت درخواست جدید</a></li>

                            </ul>
                            <ul role="button" class="nav flex-column dashboard-list row col-md-12">
                                <li class="col-md-3"><a asp-area="User" asp-controller="Seller" asp-action="index" class="nav-link">بازگشت</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

